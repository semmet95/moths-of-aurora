<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_margin="3dp"
    tools:ignore="HardcodedText">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:srcCompat="@drawable/ic_tag"
            android:id="@+id/ticketicon"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ticketfest"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="12dp"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toEndOf="@id/ticketicon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ticketlocation"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_below="@+id/ticketicon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ticketdate"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="12sp"
            android:layout_below="@id/ticketlocation"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/ticketdate"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/ticketdivider"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/ticketurl"
            android:text="Tickets"
            android:theme="@style/ButtonStyle"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/ticketdivider" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ticketrsvp"
            android:layout_marginTop="7dp"
            app:srcCompat="@drawable/ic_like"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ticketdivider"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>