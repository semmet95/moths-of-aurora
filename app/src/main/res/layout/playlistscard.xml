<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/playlistcardsizedp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    android:layout_margin="3dp"
    tools:ignore="ContentDescription">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp">

            <ImageView
                android:id="@+id/playlistthumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/transparent_black"/>

        <ImageButton
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/playlistremovebutton"
            app:srcCompat="@drawable/ic_delete"
            android:background="@android:color/transparent"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            />

        <ImageButton
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/playlistsharebutton"
            app:srcCompat="@drawable/ic_share"
            android:background="@android:color/transparent"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/playlistremovebutton"
            android:layout_alignParentBottom="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/playlisttitle"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_toStartOf="@id/playlistsharebutton"
            android:singleLine="true"
            android:textStyle="bold"
            android:ellipsize="end"
            android:textColor="@android:color/white"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>