<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:ignore="ContentDescription">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="15dp"
        tools:ignore="HardcodedText">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:id="@+id/notifbar"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Facebook"
            android:layout_below="@+id/notifbar"
            android:id="@+id/fanotifications"
            android:layout_marginTop="10dp"
            android:padding="10dp"/>

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Instagram"
            android:id="@+id/innotifications"
            android:layout_below="@+id/fanotifications"
            android:padding="10dp"/>

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Twitter"
            android:id="@+id/twnotifications"
            android:layout_below="@+id/innotifications"
            android:padding="10dp"/>

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Youtube"
            android:id="@+id/vinotifications"
            android:layout_below="@+id/twnotifications"
            android:padding="10dp"/>

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Tickets"
            android:id="@+id/tinotifications"
            android:layout_below="@+id/vinotifications"
            android:padding="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:id="@+id/separator"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/tinotifications"
            android:layout_marginTop="15dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contactus"
            android:layout_below="@+id/separator"
            android:text="Submit Feedback"
            android:theme="@style/ButtonStyle"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_marginTop="5dp"
            android:textAlignment="textStart"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:drawablePadding="12dp"
            android:drawableStart="@drawable/ic_coffee"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sharewithfriends"
            android:layout_below="@+id/contactus"
            android:text="Share with friends"
            android:theme="@style/ButtonStyle"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textAlignment="textStart"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:drawablePadding="12dp"
            android:drawableStart="@drawable/ic_sharefriends"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rateapp"
            android:layout_below="@+id/sharewithfriends"
            android:text="Rate the app"
            android:theme="@style/ButtonStyle"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textAlignment="textStart"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:drawablePadding="12dp"
            android:drawableStart="@drawable/ic_rate"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:id="@+id/separator2"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/rateapp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"
            android:id="@+id/aboutbar"
            android:paddingTop="10dp"
            android:layout_below="@+id/separator2"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/aboutaurora"
            android:layout_below="@+id/aboutbar"
            android:text="Aurora Aksnes"
            android:theme="@style/ButtonStyle"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_marginTop="10dp"
            android:textAlignment="textStart"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="14sp"
            android:textAllCaps="false"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/aboutapp"
            android:layout_below="@+id/aboutaurora"
            android:text="Author"
            android:theme="@style/ButtonStyle"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textAlignment="textStart"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="14sp"
            android:textAllCaps="false"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/privacypolicy"
            android:layout_below="@+id/aboutapp"
            android:text="Privacy Policy"
            android:theme="@style/ButtonStyle"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textAlignment="textStart"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="14sp"
            android:textAllCaps="false"
            />

    </RelativeLayout>

</ScrollView>