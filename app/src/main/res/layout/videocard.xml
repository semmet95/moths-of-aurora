<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    android:layout_margin="5dp"
    tools:ignore="ContentDescription">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/videoframe">

            <ImageView
                android:id="@+id/videothumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/playlistaddbutton"
                android:src="@drawable/baseline_playlist_add_white_36"
                android:background="@color/transparent_black"
                android:layout_gravity="top|end"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/videoduration"
                android:layout_gravity="bottom|end"
                android:background="@color/transparent_black"
                android:textColor="@android:color/white"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"/>
        </FrameLayout>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/videotitle"
            android:layout_below="@+id/videoframe"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/videouploader"
            android:layout_below="@+id/videotitle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/videodate"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/videouploader"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/videoviews"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/videouploader"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>